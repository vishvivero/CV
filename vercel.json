{
  "version": 2,
  "builds": [
    {
      "src": "site/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".output",
        "buildCommand": "cd .. && pnpm install && cd site && pnpm build"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/site/.output/$1" }
  ]
} 